<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1072px"
    android:layout_height="152px"
    android:background="@drawable/dropbox_adjusting_frame_bg2"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/subtract"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_marginLeft="36px"
        android:scaleType="center"
        android:visibility="visible" />

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="788px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26px"
        android:maxHeight="44px"
        android:minHeight="44px"
        android:splitTrack="true"
        android:progressDrawable="@drawable/custom_seekbar_progress"
        android:thumb="@drawable/dropbox_adjusting_point"
        android:thumbOffset="0px" />

    <ImageView
        android:id="@+id/plus"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_marginLeft="26px"
        android:scaleType="center"
        android:visibility="visible" />

    <TextView
        android:id="@+id/text"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_marginLeft="25px"
        android:scaleType="center"
        android:visibility="gone" />
</LinearLayout>