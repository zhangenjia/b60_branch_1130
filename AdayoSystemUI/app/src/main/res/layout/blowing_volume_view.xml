<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="956px"
    android:layout_height="108px">

    <ImageView
        android:id="@+id/subtract_icon"
        android:layout_width="90px"
        android:layout_height="90px"
        android:layout_marginTop="18px"
        android:background="@drawable/icon_air_volume_regulation_reduce"/>

    <com.adayo.app.systemui.bases.HvacSeekBar
        android:id="@+id/hvac_seek_bar"
        android:layout_width="754px"
        android:layout_height="88px"
        android:layout_marginLeft="2px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:max="8"
        android:maxHeight="88px"
        android:min="0"
        android:minHeight="88px"
        android:paddingStart="0px"
        android:paddingEnd="0px"
        android:progressDrawable="@drawable/hvac_seek_bar_bg"
        android:splitTrack="true"
        android:thumb="@drawable/img_air_volume_regulation_slider"
        android:thumbOffset="0px" />

    <ImageView
        android:id="@+id/plus_icon"
        android:layout_width="90px"
        android:layout_height="90px"
        android:layout_marginTop="18px"
        android:layout_marginLeft="20px"
        android:background="@drawable/icon_air_volume_regulation_enlarge"/>
</LinearLayout>