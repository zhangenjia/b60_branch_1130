<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="838px"
    android:layout_height="188px"
    android:background="@drawable/popup_background_small"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="800px"
        android:layout_height="150px"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/subtract"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginLeft="32px"
            android:scaleType="center"
            android:visibility="visible" />

        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="560px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:foregroundGravity="center_vertical"
            android:max="39"
            android:maxHeight="44px"
            android:minHeight="44px"
            android:progressDrawable="@drawable/custom_seek_bar_bg"
            android:splitTrack="true"
            android:thumb="@drawable/progress_bar_button"
            android:thumbOffset="0px" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:scaleType="center"
            android:text="25"
            android:textColor="@color/white"
            android:textSize="36px" />
    </LinearLayout>
</RelativeLayout>