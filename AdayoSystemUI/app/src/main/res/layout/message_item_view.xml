<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="853px"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/item_layout"
        android:layout_width="853px"
        android:layout_height="wrap_content"
        android:background="@drawable/dropbox_message_center_list_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48px"
            android:layout_marginTop="20px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/message_type"
                android:layout_width="48px"
                android:layout_height="48px"
                android:layout_marginLeft="20px"
                android:scaleType="center"
                android:src="@drawable/dropbox_icon_system" />

            <TextView
                android:id="@+id/message_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="21px"
                android:textColor="@color/white"
                android:text="@string/message_center"
                android:textSize="30px" />

            <TextView
                android:id="@+id/message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20px"
                android:textColor="@color/qs_text_color_grey"
                android:textSize="24px"
                android:text="02-21"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/unread_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="63px"
            android:layout_marginTop="15px"
            android:visibility="gone"
            android:src="@drawable/dropbox_icon_system_news"/>

        <TextView
            android:id="@+id/message_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19px"
            android:layout_marginRight="119px"
            android:layout_marginTop="91px"
            android:layout_marginBottom="29px"
            android:textColor="@color/qs_text_color_grey"
            android:textSize="24px"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="166px"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/msg_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/selector_message_item_delete" />
    </LinearLayout>
</LinearLayout>