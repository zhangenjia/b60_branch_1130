<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="369px"
    android:layout_height="264px"
    android:layout_marginRight="14px"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.adayo.app.radio.utils.BlurTransitionView
        android:id="@+id/collection_blurIcon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/collection_item_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_bg"/>

    <TextView
        android:id="@+id/tv_number_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01."
        android:textColor="@color/color_white"
        android:textSize="30px"
        app:layout_constraintLeft_toLeftOf="@id/guideline_left_21"
        app:layout_constraintTop_toTopOf="@id/guideline_top_22" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="17px"
        android:background="@drawable/icon_close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_top_22" />

    <ImageView
        android:id="@+id/item_radio_play"
        android:layout_width="28px"
        android:layout_height="27px"
        android:layout_below="@id/tv_number_collection"
        android:layout_marginTop="92px"
        android:layout_marginStart="21px"
        android:visibility="gone"
        android:src="@drawable/icon_audiocable"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

<!--    <LinearLayout-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:orientation="horizontal"-->
<!--        app:layout_constraintLeft_toLeftOf="@id/guideline_left_21"-->
<!--        app:layout_constraintTop_toTopOf="@id/guideline_top_193">-->
        <TextView
            android:id="@+id/tv_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100.0"
            android:textSize="40px"
            android:textColor="@color/color_white"
            app:layout_constraintLeft_toLeftOf="@id/guideline_left_21"
            app:layout_constraintTop_toTopOf="@id/guideline_top_193"/>

        <TextView
            android:id="@+id/tv_radio_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:text="@string/tv_mhz"
            android:textSize="30px"
            android:textColor="@color/color_white"
            app:layout_constraintLeft_toRightOf="@id/tv_radio"
            app:layout_constraintTop_toTopOf="@id/guideline_top_203"/>

<!--        </LinearLayout>-->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top_193"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="193px"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left_21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="21px" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top_22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="15px"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top_203"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="203px"/>

</androidx.constraintlayout.widget.ConstraintLayout>