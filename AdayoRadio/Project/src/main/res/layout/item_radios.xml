<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="369px"
    android:layout_height="264px"
    android:layout_marginRight="14px"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.adayo.app.radio.utils.BlurTransitionView
            android:id="@+id/blurIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <View
            android:id="@+id/search_item_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bottom_bg" />

        <TextView
            android:id="@+id/tv_radio_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21px"
            android:layout_marginTop="15px"
            android:text="01."
            android:textColor="@color/color_white"
            android:textSize="30px" />

        <ImageView
            android:id="@+id/iv_collection_status"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15px"
            android:layout_marginEnd="17px"
            android:src="@drawable/icon_collectionsmall2_n" />

        <ImageView
            android:id="@+id/iv_play_status"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_below="@id/tv_radio_num"
            android:layout_marginStart="21px"
            android:layout_marginTop="92px"
            android:src="@drawable/play_anim" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21px"
            android:layout_marginTop="193px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100.0"
                android:textColor="@color/color_white"
                android:textSize="40px" />

            <TextView
                android:id="@+id/tv_radio_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10px"
                android:text="@string/tv_mhz"
                android:textColor="@color/color_white"
                android:textSize="30px" />

        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>