<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_container"
    android:layout_width="838px"
    android:layout_height="470px"
    android:background="@drawable/offroad_system_settings_popup_background_01">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="66px"
            android:layout_height="66px"
            android:background="@drawable/icon_singlerow_delete" />

        <TextView
            android:id="@+id/tv_cfm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:gravity="center"
            android:text="@string/conn_bt_del_dlg_title"
            android:textColor="@color/bt_dlg_msg"
            android:textSize="40px" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_cfm_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="212px"
        android:gravity="center"
        android:text="@string/conn_bt_del_dlg_msg"
        android:textColor="@color/white"
        android:textSize="36px" />

    <Button
        android:id="@+id/btn_cfm_positive"
        android:layout_width="352px"
        android:layout_height="80px"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="51px"
        android:layout_marginBottom="51px"
        android:background="@drawable/selector_btn_two"
        android:gravity="center"
        android:text="@string/conn_bt_del_dlg_positive_btn"
        android:textAllCaps="false"
        android:textColor="@color/bt_dlg_positive_btn_txt"
        android:textSize="40px" />

    <Button
        android:id="@+id/btn_cfm_negative"
        android:layout_width="352px"
        android:layout_height="80px"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="51px"
        android:layout_marginBottom="51px"
        android:background="@drawable/selector_btn_two"
        android:gravity="center"
        android:text="@string/conn_bt_del_dlg_negative_btn"
        android:textAllCaps="false"
        android:textColor="@color/bt_dlg_neutral_btn_txt"
        android:textSize="40px" />


</RelativeLayout>