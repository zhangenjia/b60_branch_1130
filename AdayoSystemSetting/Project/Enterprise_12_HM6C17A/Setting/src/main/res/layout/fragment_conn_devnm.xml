<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_devnm"
    android:layout_width="436dp"
    android:layout_height="292dp"
    tools:context=".devm.ConnDevnmFragment">

    <ImageView
        android:id="@+id/iv_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/conn_devnm_last_high"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_devnm_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/conn_devnm_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_conn_devnm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="73dp"
        android:text="@string/conn_devnm_title"
        android:textColor="@color/white"
        android:textSize="@dimen/common_tvsize_big2"
        app:layout_constraintBottom_toBottomOf="@id/iv_devnm_icon"
        app:layout_constraintStart_toEndOf="@id/iv_devnm_icon"
        app:layout_constraintTop_toTopOf="@id/iv_devnm_icon" />

    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:background="@drawable/line_400"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_devnm_icon" />

    <Button
        android:id="@+id/btn_conn_devnm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/offroad_system_settings_low_match_input_box_benjimingcheng_n"
        android:drawableRight="@drawable/selector_right_arrow"
        android:gravity="center_vertical|left"
        android:paddingLeft="22dp"
        android:paddingRight="12dp"
        android:textAllCaps="false"
        android:text="NONE"
        android:textColor="@color/white"
        android:textSize="@dimen/common_tvsize_big2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>