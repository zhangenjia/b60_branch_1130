<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bg_popup">

    <Button
        android:id="@+id/btn_popup_voice_wakefree_close"
        android:layout_width="@dimen/close_popup_width"
        android:layout_height="@dimen/close_popup_height"
        android:layout_marginLeft="@dimen/close_popup_x"
        android:layout_marginTop="@dimen/close_popup_y"
        android:background="@drawable/selector_btn_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_popup_voice_wakefree_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="11px"
        android:text="@string/voice_wake_free_info_title"
        android:textColor="@color/white"
        android:textSize="@dimen/common_tvsize_big1"
        android:layout_marginTop="25px"
        app:layout_constraintStart_toEndOf="@id/btn_popup_voice_wakefree_close"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/Free_wake_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="312px"
        android:text="@string/open_music"
        android:layout_marginStart="342px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>