<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false">

    <ImageView
        android:id="@+id/iv_item_slidebar_ico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="171dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/offroad_system_settings_sound_icon_volume_setting_ring_tone" />
    <TextView
        android:id="@+id/tv_item_slidevar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="31dp"
        app:layout_constraintTop_toTopOf="@id/iv_item_slidebar_ico"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_slidebar_ico"
        app:layout_constraintEnd_toStartOf="@id/iv_item_slidebar_ico"
        android:textColor="@color/white"
        android:textSize="30px"
        android:maxLines="2"
        android:text="@string/sound_loudness_system"/>

    <SeekBar
        android:background="@null"
        android:id="@+id/sb_item_slidebar_slide"
        android:layout_width="565dp"
        android:layout_height="44dp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:progressDrawable="@drawable/layer_slide_progress_sb"
        android:splitTrack="true"
        android:max="39"
        android:progress="5"
        android:thumbOffset="5px"
        android:thumb="@drawable/selector_slide_thumb_sb"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@+id/iv_item_slidebar_ico"
        app:layout_constraintBottom_toBottomOf="@+id/iv_item_slidebar_ico"
        app:layout_constraintStart_toEndOf="@+id/iv_item_slidebar_ico"
        android:visibility="visible"/>

