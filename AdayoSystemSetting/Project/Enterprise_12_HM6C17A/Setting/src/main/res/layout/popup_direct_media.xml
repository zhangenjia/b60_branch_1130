<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1820dp"
    android:layout_height="860dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_bg_popup">

    <Button
        android:id="@+id/btn_popup_media_close"
        android:layout_width="@dimen/close_popup_width"
        android:layout_height="@dimen/close_popup_height"
        android:layout_marginTop="@dimen/close_popup_y"
        android:layout_marginLeft="@dimen/close_popup_x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/selector_btn_close"/>
    <TextView
        android:id="@+id/tv_popup_media_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="12px"
        app:layout_constraintTop_toTopOf="@id/btn_popup_media_close"
        app:layout_constraintBottom_toBottomOf="@id/btn_popup_media_close"
        app:layout_constraintLeft_toRightOf="@id/btn_popup_media_close"
        android:text="@string/direct_media_title"
        android:textSize="@dimen/common_tvsize_big1"
        android:textColor="@color/white"
        android:gravity="center_vertical"/>

    <ImageView
        android:id="@+id/iv_popup_media_diagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:layout_marginLeft="52dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/offroad_system_settings_picture_steering_wheel_media"/>

    <GridView
        android:id="@+id/gv_popup_media_key"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:horizontalSpacing="20dp"
        android:verticalSpacing="20dp"
        android:cacheColorHint="@null"
        android:layout_marginTop="186dp"
        android:layout_marginHorizontal="52dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_popup_media_diagram"/>

</android.support.constraint.ConstraintLayout>