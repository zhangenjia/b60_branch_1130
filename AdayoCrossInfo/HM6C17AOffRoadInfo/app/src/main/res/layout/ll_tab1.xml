<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/ll_tab"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="104px"
    android:background="@drawable/img_background_box"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/vehicleInfo"
        android:layout_width="200px"
        android:layout_height="72px"
        android:layout_gravity="center_vertical"
        android:background="@drawable/img_select_left"
        android:gravity="center"
        android:text="@string/tab1"
        android:textColor="@drawable/text_selector"
        android:textSize="30px" />

    <ImageView
        android:id="@+id/iv_line_left"
        android:layout_width="1px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/line"/>

    <TextView
        android:id="@+id/environInfo"
        android:layout_width="200px"
        android:layout_height="72px"
        android:layout_gravity="center_vertical"
        android:background="@drawable/img_select_right"
        android:gravity="center"
        android:text="@string/tab2"
        android:textColor="@drawable/text_selector"
        android:textSize="30px" />

</LinearLayout>
