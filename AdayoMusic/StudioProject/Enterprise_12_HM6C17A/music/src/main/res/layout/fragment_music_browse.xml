<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.page.fragment.browse.BrowseFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_browse"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="58dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/browse_tab_indicator"
        app:tabMode="fixed"
        app:tabPaddingBottom="5dp"
        app:tabPaddingEnd="5dp"
        app:tabPaddingStart="5dp"
        app:tabPaddingTop="5dp"
        app:tabRippleColor="@null"
        app:tabSelectedTextColor="#FFFFFFFF"
        app:tabTextAppearance="@style/Theme.Enterprise_12_HM6C17A.MusicBrowseTabLayout.TextAppearance"
        app:tabTextColor="#80FFFFFF" />

    <View
        android:id="@+id/view_browse_divide"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#80FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/tl_browse"
        app:layout_constraintStart_toStartOf="@+id/tl_browse"
        app:layout_constraintTop_toBottomOf="@+id/tl_browse" />

    <View
        android:id="@+id/view_browse_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/frame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tl_browse"
        app:layout_constraintStart_toStartOf="@+id/tl_browse"
        app:layout_constraintTop_toBottomOf="@+id/tl_browse"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_browse"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="2dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="26dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_browse_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/view_browse_bg"
        app:layout_constraintTop_toTopOf="@+id/view_browse_bg" />

</androidx.constraintlayout.widget.ConstraintLayout>