<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/com_bg"
    tools:context=".ui.page.activity.MainActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_main"
        android:layout_width="200dp"
        android:layout_height="72dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/gl_main_0"
        app:tabGravity="fill"
        app:tabIndicator="@null"
        app:tabMode="fixed"
        app:tabPaddingBottom="5dp"
        app:tabPaddingEnd="5dp"
        app:tabPaddingStart="5dp"
        app:tabPaddingTop="5dp"
        app:tabRippleColor="@null"
        app:tabTextAppearance="@style/Theme.Enterprise_12_HM6C17A.MainTabLayout.TextAppearance"
        app:tabTextColor="#FFFFFFFF" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/gl_main_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tl_main" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_main_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="104dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_main_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="116dp" />

</androidx.constraintlayout.widget.ConstraintLayout>