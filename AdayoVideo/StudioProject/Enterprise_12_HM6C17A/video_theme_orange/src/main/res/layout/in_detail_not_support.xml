<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frame_video_last_bg">

    <ImageView
        android:id="@+id/iv_not_support_ico"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:src="@drawable/icon_prompt_play_warning_s"
        app:layout_constraintBottom_toTopOf="@+id/tv_not_support_h1"
        app:layout_constraintEnd_toStartOf="@+id/guideline_not_support_1"
        app:layout_constraintStart_toStartOf="@+id/guideline_not_support_0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_not_support_h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:maxLines="2"
        android:paddingHorizontal="4dp"
        android:text="@string/lo_music_detail_not_support"
        android:textColor="#FFFFFFFF"
        android:textSize="40sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_not_support_1"
        app:layout_constraintStart_toStartOf="@+id/guideline_not_support_0"
        app:layout_constraintTop_toBottomOf="@+id/iv_not_support_ico" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_not_support_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_not_support_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1" />

</androidx.constraintlayout.widget.ConstraintLayout>