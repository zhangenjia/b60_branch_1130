<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="838px"
        android:layout_height="470px"
        android:background="@mipmap/popup_background_01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="73px"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="66px"
            android:layout_height="66px"
            android:layout_marginRight="24px"
            android:layout_gravity="center"
            app:layout_constraintRight_toLeftOf="@id/dialog_title"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40px"
            android:layout_gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <TextView
            android:id="@+id/dialog_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="209px"
            android:textSize="36px"
            android:gravity="center_horizontal"
            android:layout_marginLeft="32px"
            android:layout_marginRight="32px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/dialog_ok"
            android:layout_width="352px"
            android:layout_height="80px"
            android:layout_marginLeft="51px"
            android:layout_marginBottom="51px"
            android:background="@drawable/btn_dialog"
            android:gravity="center"
            android:text=""
            android:textSize="40px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Button
            android:id="@+id/dialog_cancel"
            android:layout_width="352px"
            android:layout_height="80px"
            android:layout_marginRight="51px"
            android:textSize="40px"
            android:layout_marginBottom="51px"
            android:background="@drawable/btn_dialog"
            android:gravity="center"
            android:text=""
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>