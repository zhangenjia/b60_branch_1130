            android:clickable="true"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24px"
                android:src="@drawable/btn_return" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16px"
                android:text="@string/text_playback_back"
                android:textColor="@drawable/btn_text_color"
                android:textSize="35px" />

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp270"
            android:layout_height="wrap_content"
            android:src="@mipmap/line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_at_will_playback_back" />

        <LinearLayout
            android:id="@+id/ll_at_will_playback_video"
            android:layout_width="@dimen/dp270"
            android:layout_height="@dimen/dp123"
            android:clickable="true"
            android:background="@mipmap/frame_sel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_at_will_playback_back">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24px"
                android:src="@drawable/btn_video" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16px"
                android:text="@string/text_playback_at_will_video"
                android:textColor="@drawable/btn_text_color"
                android:textSize="35px" />

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp270"
            android:layout_height="wrap_content"
            android:src="@mipmap/line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_at_will_playback_video" />

        <LinearLayout
            android:id="@+id/ll_at_will_playback_picture"
            android:layout_width="@dimen/dp270"
            android:layout_height="@dimen/dp123"
            android:clickable="true"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_at_will_playback_video">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24px"
                android:src="@drawable/btn_playback_photo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16px"
                android:text="@string/text_playback_at_will_picture"
                android:textColor="@drawable/btn_text_color"
                android:textSize="35px" />

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp270"
            android:layout_height="wrap_content"
            android:src="@mipmap/line"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_at_will_playback_picture" />



        <LinearLayout
            android:id="@+id/ll_at_will_playback_at_will"
            android:layout_width="@dimen/dp270"
            android:layout_height="246dp"
            android:clickable="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_at_will_playback_picture">

            <ImageView
                android:layout_width="154px"
                android:layout_height="123px"
                android:layout_marginLeft="58px"
                android:src="@mipmap/icon_big_free_shot"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp270"
            android:layout_height="wrap_content"
            android:src="@mipmap/line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_at_will_playback_at_will" />

        <LinearLayout
            android:id="@+id/ll_at_will_playback_edit"
            android:layout_width="@dimen/dp270"
            android:layout_height="@dimen/dp123"
            android:clickable="true"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_at_will_playback_at_will">

            <ImageView
                android:id="@+id/iv_at_will_playback_edit_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24px"
                android:src="@drawable/btn_edit" />

            <TextView
                android:id="@+id/iv_at_will_playback_edit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16px"
                android:text="@string/text_playback_edit"
                android:textColor="@drawable/btn_text_color"
                android:textSize="35px" />

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp270"
            android:layout_height="wrap_content"
            android:src="@mipmap/line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_at_will_playback_edit" />

        <LinearLayout
            android:id="@+id/ll_at_will_playback_control"
            android:layout_width="@dimen/dp270"
            android:layout_height="@dimen/dp123"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_at_will_playback_edit">

            <ImageView
                android:id="@+id/iv_at_will_playback_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24px"
                android:clickable="true"
                android:src="@mipmap/icon_up_n" />

            <LinearLayout
                android:layout_width="@dimen/dp73"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="21px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_at_will_cur_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_dp24" />

                <ImageView
                    android:layout_width="wrap_content"
