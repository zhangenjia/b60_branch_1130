        <GridView
            android:id="@+id/gv_will_tot_playback"
            android:layout_width="@dimen/dp1650"
            android:layout_height="@dimen/dp860"
            android:layout_marginLeft="@dimen/dp270"
            android:columnWidth="@dimen/dp536"
            android:numColumns="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_playback" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>