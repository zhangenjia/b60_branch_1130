<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item"
    android:layout_width="268px"
    app:cardCornerRadius="9px"
    android:layout_height="268px"
    android:layout_marginBottom="40px">


    <RelativeLayout
        android:id="@+id/rl_include"
        android:background="@drawable/frame_last"
        android:layout_width="268px"
        android:layout_height="268px">

        <ImageView
            android:id="@+id/photo_list_img_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="268px"
            android:layout_height="48px"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="@color/text_name" />

        <TextView
            android:id="@+id/photo_list_text_id"
            android:layout_width="match_parent"
            android:layout_height="63px"
            android:layout_alignParentBottom="true"
            android:ellipsize="marquee"
            android:gravity="center"
            android:paddingLeft="39px"
            android:paddingRight="39px"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="38px" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/item_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/frame_top">

    </ImageView>
    <ImageView
        android:id="@+id/image_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/frame_top_sel"
        android:visibility="gone" />

</android.support.v7.widget.CardView>
