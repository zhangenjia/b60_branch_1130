<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1920px"
    android:layout_height="860px"
   >

    <com.adayo.app.picture.view.TimerContainer
        android:id="@+id/view_container"
        android:layout_width="match_parent"
        android:soundEffectsEnabled="false"
        android:layout_height="match_parent">

        <com.adayo.app.picture.ui.photoview.PhotoView
            android:id="@+id/full_screen_photo"
            android:layout_width="1920px"
            android:layout_height="860px" />

    </com.adayo.app.picture.view.TimerContainer>

    <RelativeLayout
        android:id="@+id/error_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="229px"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/icon_big_picture_error" />

            <TextView
                android:id="@+id/error_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="88px"
                android:text="asdasdasdas"
                android:textColor="@color/white"
                android:textSize="@dimen/text_42" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/play_name_tv"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:paddingRight="55dp"
        android:background="@drawable/frame_title_long_last"
        android:gravity="center_vertical|left"
        android:paddingStart="56px"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="30px" />

    <LinearLayout
        android:id="@+id/control_bar"
        android:layout_width="818px"
        android:layout_height="116px"
        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33px"
        android:background="#99000000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/photo_play_list"
            android:layout_width="84px"
            android:layout_height="84px"
            android:layout_marginStart="55px"
            android:layout_marginTop="16px"
            android:src="@drawable/list_btn_pressed" />

        <ImageView
            android:id="@+id/photo_play_pre"
            android:layout_width="84px"
            android:layout_height="84px"
            android:layout_marginStart="72px"
            android:layout_marginTop="16px"
            android:src="@drawable/pre_btn_pressed" />

        <ImageView
            android:id="@+id/photo_play_pause"
            android:layout_width="84px"
            android:layout_height="84px"
            android:layout_marginStart="72px"
            android:layout_marginTop="16px"
            android:src="@drawable/play_btn_pressed" />

        <ImageView
            android:id="@+id/photo_play_next"
            android:layout_width="84px"
            android:layout_height="84px"
            android:layout_marginStart="72px"
            android:layout_marginTop="16px"
            android:background="@drawable/next_btn_pressed"
            android:src="@drawable/next_btn_pressed" />

        <ImageView
            android:id="@+id/photo_play_rotation"
            android:layout_width="84px"
            android:layout_height="84px"
            android:layout_marginStart="72px"
            android:layout_marginTop="16px"
            android:src="@drawable/rotation_btn_pressed" />

    </LinearLayout>

</RelativeLayout>