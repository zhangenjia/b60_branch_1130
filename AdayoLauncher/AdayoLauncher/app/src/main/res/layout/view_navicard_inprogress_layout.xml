<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_naviinprogress"
    android:layout_width="564px"
    android:layout_height="860px">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="122px"
        android:layout_marginTop="31px"
        android:text="导航"
        android:textSize="31sp"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/iv_turnarrow"
        android:layout_width="204px"
        android:layout_height="204px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="172px" />

    <TextView
        android:id="@+id/tv_distancenextroad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60sp"
        android:text="300"
        android:layout_marginLeft="100px"
        android:layout_marginTop="416px" />

    <TextView
        android:id="@+id/tv_dTD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="31sp"
        android:layout_marginLeft="98px"
        android:layout_marginTop="560px"
        android:text="2741公里"/>

    <TextView
        android:id="@+id/tv_eTA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="31sp"
        android:layout_marginLeft="280px"
        android:layout_marginTop="560px"
        android:text="12小时25分钟"/>

    <LinearLayout
        android:layout_width="179px"
        android:layout_height="77px"
        android:layout_marginLeft="285px"
        android:layout_marginTop="406px"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_nextRoadname_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="31sp"
            android:text="米右转"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_nextRoadname_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="31sp"
                android:text="进入"/>

            <TextView
                android:id="@+id/tv_nextRoadname_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="31sp"
                android:text="观海路"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="214px"
        android:layout_height="72px"
        android:layout_marginLeft="173px"
        android:layout_marginTop="684px" >

        <TextView
            android:id="@+id/tv_terminateNavigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="31sp"
            android:layout_centerInParent="true"
            android:text="结束导航"/>
    </RelativeLayout>
</RelativeLayout>
