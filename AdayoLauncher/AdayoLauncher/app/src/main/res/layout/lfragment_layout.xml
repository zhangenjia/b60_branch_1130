<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context=".ui.activity.MainActivity">

    <!--    大卡父布局-->
    <LinearLayout
        android:id="@+id/ll_bigcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="49px"
        android:alpha="0"
        android:orientation="vertical" />
    <!--大卡绿色外框-->
    <LinearLayout
        android:id="@+id/frame_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="49px"
        android:alpha="0"
        android:background="@drawable/bg_bigcard_color"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/ll_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_spacing"
        android:layout_toRightOf="@+id/ll_bigcard"
        android:alpha="0"
        android:orientation="vertical" />

    <ImageView
        android:id="@+id/ll_frame_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_spacing"
        android:layout_toRightOf="@+id/ll_bigcard"
        android:alpha="0"
        android:background="@drawable/bg_smallcard_color"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/ll_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_spacing"
        android:layout_toRightOf="@+id/ll_one"
        android:alpha="0"
        android:orientation="vertical" />

    <ImageView
        android:id="@+id/ll_frame_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_spacing"
        android:layout_toRightOf="@+id/ll_one"
        android:alpha="0"
        android:background="@drawable/bg_smallcard_color"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/ll_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_spacing"
        android:layout_toRightOf="@+id/ll_two"
        android:alpha="0"
        android:orientation="vertical" />

    <ImageView
        android:id="@+id/ll_frame_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_spacing"
        android:layout_toRightOf="@+id/ll_two"
        android:alpha="0"
        android:background="@drawable/bg_smallcard_color"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/ll_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_spacing"
        android:layout_toRightOf="@+id/ll_three"
        android:alpha="0"
        android:orientation="vertical" />

    <ImageView
        android:id="@+id/ll_frame_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_spacing"
        android:layout_toRightOf="@+id/ll_three"
        android:alpha="0"
        android:background="@drawable/bg_smallcard_color"
        android:orientation="vertical" />


    <LinearLayout
        android:id="@+id/ll_frame_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/ll_bigcard"
        android:alpha="0"
        android:clipChildren="false"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_spacing"
            android:background="@drawable/bg_smallcard_color" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_spacing"
            android:background="@drawable/bg_smallcard_color"
            android:clipChildren="false" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_spacing"
            android:background="@drawable/bg_smallcard_color"
            android:clipChildren="false" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_spacing"
            android:background="@drawable/bg_smallcard_color" />
    </LinearLayout>

    <!--黑色遮罩-->
    <ImageView
        android:id="@+id/ll_bg_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="@drawable/bg_defaultfragment_mask"
        android:orientation="vertical" />
</RelativeLayout>