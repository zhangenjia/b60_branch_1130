<resources>

        <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
            <!-- Customize your theme here. -->
<!--            <item name="android:windowBackground">@drawable/bg_theme</item>-->
            <item name="android:windowDisablePreview">true</item>
            <item name="android:windowEnableSplitTouch">false</item>
            <item name="android:splitMotionEvents">false</item>
        </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="LauncherBottomDialog" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/window_up</item>
        <item name="android:windowExitAnimation">@anim/window_down</item>
    </style>


    <style name="MyDialog" parent="@android:style/Animation.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
<!--        <item name="android:button">@drawable/warning_checkbox</item>-->
    </style>

    <style name="WarningApp" parent="@android:style/Animation.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/tabtitlesize</item>
    </style>
<!--    <style name="text_style">-->
<!--        <item name="android:stateListAnimator">@animator/textsize_selector</item>-->
<!--    </style>-->

</resources>
