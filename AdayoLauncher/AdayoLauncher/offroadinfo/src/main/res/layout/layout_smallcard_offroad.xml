<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_small_card_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40px"
    android:defaultFocusHighlightEnabled="false"
    android:orientation="vertical">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
    <ImageView
        android:id="@+id/iv_crossinfo_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/img_smallcard_crossinfo"/>
    <ImageView
        android:id="@+id/iv_crossinfo_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/img_smallcard_crossinfo_b"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/iv_crossinfo_frame"
        android:layout_width="@dimen/smallcardwith"
        android:layout_height="@dimen/smallcardheight"
        android:background="@drawable/bg_smallcard"/>
    <TextView
        android:id="@+id/tv_orimSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/orim"
        android:textColor="#ffffff"
        android:textSize="36px"
        android:layout_marginTop="37px"/>
</RelativeLayout>